{
  "name": "neptune-core-wallet",
  "productName": "neptune-core-wallet",
  "version": "1.0.0",
  "description": "Neptune Core Wallet - Desktop wallet for Neptune blockchain",
  "main": ".vite/build/main/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "format": "pnpm exec biome format --write",
    "format:files": "pnpm exec biome format --write",
    "lint": "pnpm exec biome lint --write",
    "lint:files": "pnpm exec biome lint --write",
    "check": "pnpm exec biome check --write",
    "check:files": "pnpm exec biome check --write",
    "ci": "pnpm exec biome ci",
    "pre-commit": "pnpm exec biome check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "build:binaries": "scripts/build-cross-platform-binaries.sh",
    "build:binaries:cross-platform": "scripts/build-cross-platform-binaries.sh",
    "build:binaries:win": "scripts/build-cross-platform-binaries.bat",
    "generate:icons": "scripts/generate-icons.sh",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb",
    "build:rpm": "electron-builder --linux rpm",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --linux --mac --win",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test:run && pnpm test:e2e",
    "test:ci": "pnpm test:run --coverage && pnpm test:e2e",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps"
  },
  "keywords": [],
  "author": {
    "name": "sploitzberg",
    "email": "sploitzberg@proton.me"
  },
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller"
    ],
    "overrides": {
      "esbuild": "^0.25.0",
      "cross-zip": "npm:yauzl@^3.0.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.56.0",
    "@tanstack/router-plugin": "^1.132.51",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/is-running": "^2.1.2",
    "@types/pidusage": "^2.0.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "electron": "38.2.2",
    "electron-builder": "^26.0.12",
    "jsdom": "^25.0.1",
    "terser": "^5.44.0",
    "typescript": "~5.9.3",
    "vite": "^5.4.20",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/electron": "^7.1.1",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/react-router": "^1.132.47",
    "@tanstack/react-router-devtools": "^1.132.51",
    "@tanstack/react-table": "^8.21.3",
    "@testing-library/react": "^16.3.0",
    "argon2": "^0.44.0",
    "async-mutex": "^0.5.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dompurify": "^3.2.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "execa": "^9.6.0",
    "framer-motion": "^12.23.22",
    "fs-extra": "^11.3.2",
    "is-running": "^2.1.0",
    "ky": "^1.11.0",
    "lru-cache": "^11.2.2",
    "lucide-react": "^0.545.0",
    "next-themes": "^0.4.6",
    "node-cache": "^5.1.2",
    "p-limit": "^7.1.1",
    "p-queue": "^9.0.0",
    "p-retry": "^7.0.0",
    "p-timeout": "^7.0.1",
    "pidusage": "^4.0.1",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.64.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "uuid": "^13.0.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.neptune.core.wallet",
    "productName": "Neptune Core Wallet",
    "artifactName": "neptune-core-wallet-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist-electron-builder"
    },
    "files": [
      ".vite/build/**/*",
      "public/**/*",
      "resources/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "resources/binaries/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/binaries",
        "to": "binaries",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Finance",
      "description": "Desktop wallet for Neptune blockchain",
      "icon": "public/assets/logos/neptune-256x256.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.finance",
      "icon": "public/assets/logos/neptune.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/assets/logos/neptune.ico"
    }
  }
}
